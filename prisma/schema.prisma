enum Category {
  electronics
  clothing
  books
  food
  other
}

model Item {
  id          String      @id @default(uuid())
  name        String     
  description String?     
  price       Float       
  category    Category
  inStock     Boolean
  createdAt   DateTime @default(now())
  tags        String[]
  manufacturer Json?

  @@map("items")
}
